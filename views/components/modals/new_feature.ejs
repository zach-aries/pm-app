<div class="modal fade" id="newFeatureModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="newFeatureLabel">Add New Feature</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="newFeature-response"></div>
                <form id="newFeatureForm" action="">
                    <div class="form-group">
                        <label for="newFeatureName">Feature Name</label>
                        <input type="text" class="form-control" id="newFeatureName">
                    </div>
                    <br />
                    <div class="form-group">
                        <label for="newFeatureParent">Parent Feature</label>
                        <select class="form-control" id="newFeatureParent">
                            <option value="null">(Root)</option>
                        </select>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-6">
                            <label class="control-label" for="date">Estimated Start: </label>
                            <input id="datepickerFeatureS" class="form-control date-picker" name="start date" placeholder="MM/DD/YYYY" type="text" />
                        </div>
                        <div class="col-6">
                            <label class="control-label" for="date">Estimated Finish: </label>
                            <input id="datepickerFeatureF" class="form-control date-picker" name="end date" placeholder="MM/DD/YYYY" type="text" />
                        </div>
                    </div>
                    <br>

                    <div class="modal-footer">
                    <!--    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button> -->
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
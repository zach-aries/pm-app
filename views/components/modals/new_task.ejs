<!-- Modal -->

<!DOCTYPE html>
<html>
    <body>
        <div class="modal fade" id="newTaskModal" tabindex="-1" role="dialog" aria-labelledby="newTaskModal" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="newTaskLabel">New Task</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form id="newTaskForm" action="">
                            <div class="form-group">
                                <form>
                                    <div class="form-group">
                                        <label for="featureName">Feature Name:</label>
                                        <input type="text" class="form-control" id="featureName">
                                    </div>
                                    <div class="form-group">
                                        <label for="subfeatureName">Sub-Feature Name:</label>
                                        <input type="text" class="form-control" id="subfeatureName">
                                    </div>
                                    <div class="form-group">
                                        <label for="taskName">Task Name:</label>
                                        <input type="text" class="form-control" id="taskName">
                                    </div>
                                    <div class="form-group">
                                        <label for="comment">Description:</label>
                                        <textarea class="form-control" rows="5" id="comment"></textarea>
                                    </div>
                                </form>
                                <div class="form-group">
                                    <label for="text">Description:</label>
                                    <textarea class="form-control" rows="5" id="comment"></textarea>
                                </div>

                                <div class="form-group">
                                        <label for="newAssignToFormControlSelect1">Assign task to: </label>
                                        <select class="form-control" id="newAssignToFormControlSelect1"></select>
                                </div>

                                <div class="row">
                                    <form method="post">
                                            <div  class="col-xs-6" class="form-group"> <!-- Date input -->
                                            <label class="col-xs-6" class="control-label" for="date">Estimated Start: </label>
                                            <input class="form-control" id="date" name="date" placeholder="MM/DD/YYY" type="text"/>
                                            </div>
                                            <div class="col-xs-6" class="form-group"> <!-- Date input -->
                                                <label class="col-xs-6" class="control-label" for="date">Estimated Finish: </label>
                                                <input class="form-control" id="date" name="date" placeholder="MM/DD/YYY" type="text"/>
                                            </div>
                                    </form>
                                </div>
                            </div>
                            <br />
                            <br />
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary pull-left">Save Task</button>
                                <button type="button" class="btn btn-secondary pull-left" data-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-primary">Start Task</button>
                                <button type="submit" class="btn btn-success">Complete</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    </body>
</html>
<!-- Modal -->
<div class="modal fade" id="newTaskModal" tabindex="-1" role="dialog" aria-labelledby="newTaskModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="newTaskLabel">New Task</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="newTaskForm" action="">
                    <div class="form-group">
                            <form>
                                Feature Name:<br>
                                <input type="text" name="featureName"><br>
                                Sub-Feature Name:<br>
                                <input type="text" name="subfeatureName"><br>
                                Task Name:<br>
                                <input type="text" name="taskName"><br>
                                Description:<br>
                                <input type="text" name="description"><br>
                            </form>
                            <label for="newTaskFormControlSelect1">Assign Task to:</label>
                            <select class="form-control" id="newTaskFormControlSelect1"></select>
                            <form>
                                Estimated Start:<br>
                                <input type="text" name="startDate"><br>
                                Estimated Finish:<br>
                                <input type="text" name="finishDate"><br>
                            </form>
                    </div>
                    <br />
                    <br />
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Save Task</button>
                        <button type="submit" class="btn btn-primary">Start Task</button>
                        <button type="submit" class="btn btn-success">Complete</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
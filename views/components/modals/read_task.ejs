<div class="modal fade" id="readTaskModal" tabindex="-1" role="dialog" data-task-id="">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="rem-feat-mod-id">Task</h5>
                <button type="button" class="edit btn btn-info" data-target="editTask-form">
                    <i class="fas fa-pencil-alt"></i>
                </button>
            </div>
            <div class="modal-body">
                <div id="readTask-response"></div>
                <form id="editTask-form" action="">
                    <div class="form-group">
                        <label for="editTask-name">Task Name:</label>
                        <input type="text" class="form-control" id="editTask-name" disabled>
                    </div>
                    <div class="form-group">
                        <label for="editTask-description">Description:</label>
                        <textarea class="form-control" rows="5" id="editTask-description" disabled></textarea>
                    </div>

                    <div class="form-group">
                        <label for="assignedTo">Assign task to: </label>
                        <select class="form-control" id="editTask-assignedTo" multiple disabled></select>
                    </div>

                    <div class="row">
                        <div class="col-6">
                            <label class="control-label" for="date">Estimated Start: </label>
                            <input id="editTask-startDate" class="form-control date-picker" name="start date" placeholder="MM/DD/YYYY" type="text" disabled/>
                        </div>
                        <div class="col-6">
                            <label class="control-label" for="date">Estimated Finish: </label>
                            <input id="editTask-endDate" class="form-control date-picker" name="end date" placeholder="MM/DD/YYYY" type="text" disabled/>
                        </div>
                    </div>

                    <br />

                    <div class="modal-footer">
                        <div class="col-6 text-left">
                            <button id="delete-taskBtn" type="button" class="btn btn-danger" disabled>Delete</button>
                        </div>
                        <div class="col-6 text-right">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary" disabled>Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

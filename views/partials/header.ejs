<!-- views/partials/header.ejs -->
<nav class="navbar navbar-expand">
    <a class="navbar-brand" href="/"><img src="/images/avocado_logo.png"></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <% if( typeof user === "undefined") { %>
   <div id="navbarNavDropdown" class="navbar-collapse collapse">
        <ul class="navbar-nav mr-auto"></ul>
        <ul id="account" class="navbar-nav">
            <li class="nav-item">
               <a class="btn btn-default nav-item nav-link sign-up" data-toggle="modal" data-target="#registerModal">Sign Up</a>
            </li>
            <li class="nav-item">
                <a class="btn btn-default nav-item nav-link login" data-toggle="modal" data-target="#loginModal">Login</a>
            </li>
        </ul>
    </div>
    <% } else { %>
    <div id="navbarNavDropdown" class="navbar-collapse collapse">
        <ul class="navbar-nav mr-auto"></ul>
        <ul id="account" class="navbar-nav">
            <% if ( title !== "Project Selector") { %>
            <li class="nav-item">
                <a class="btn btn-default nav-item nav-link" href="/dashboard/projects" >
                    <i class="fa fa-boxes fa-2x"></i>
                </a>
            </li>
            <% } %>

            <% if ( title === "Dashboard") { %>
            <li class="nav-item">
                <a class="btn btn-default nav-item nav-link" data-toggle="modal" data-target="#projectSettingsModal">
                    <i class="fa fa-sliders-h fa-lg"></i>
                </a>
            </li>
            <% } %>
            <li class="nav-item">
                <div class="dropdown show">
                    <a class="nav-item nav-link settings" href="#" role="button" id="dashboard-settings" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span id="user-info" class="name" data-userID="<%= user._id %>"><%= user.username %></span>
                        <div class="user-profile">
                            <img src="/images/user-profile/michael.jpg">
                        </div>
                        <span class="settings-icon">
                            <i class="fas fa-cog fa-xs"></i>
                        </span>

                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dashboard-settings">
                        <a class="dropdown-item" href="/logout">Logout</a>
                    </div>
                </div>
            </li>
        </ul>
    </div>
    <% } %>
</nav>